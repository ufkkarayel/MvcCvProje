
@using MvcCvProje.Models.Entity
@model List<TblHakkimda>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<h2>Profil Düzenleme Sayfası</h2>

<br />
<form method="post">
    @foreach (var item in Model)
    {
        <label style="margin-left:1.2rem">Ad</label>
        <input type="text" name="Ad" value="@item.Ad" class="form-control" />
        <br />
        <label style="margin-left:1.2rem">Soyad</label>
        <input type="text" name="Soyad" value="@item.Soyad" class="form-control" />
        <br />
        <label style="margin-left:1.2rem">Adres</label>
        <input type="text" name="Adres" value="@item.Adres" class="form-control" />
        <br />
        <label style="margin-left:1.2rem">Telefon</label>
        <input type="text" name="Telefon" value="@item.Telefon" class="form-control" />
        <br />
        <label style="margin-left:1.2rem">Mail Adresi</label>
        <input type="text" name="Mail" value="@item.Mail" class="form-control" />
        <br />
        <label style="margin-left:1.2rem">Resim</label>
        <input type="text" name="Resim" value="@item.Resim" class="form-control" />
        <br />
        <label style="margin-left:1.2rem">Açıklama</label>
        <textarea rows="5" class="form-control" name="Aciklama">@item.Aciklama</textarea>
    }
    <br />
    <button class="btn btn-success" style="margin:1.2rem">Güncelle</button>
</form>