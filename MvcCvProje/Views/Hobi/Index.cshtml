@using MvcCvProje.Models.Entity
@model List<TblHobilerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Hobi Düzenleme Sayfası</h2>

<br />
<form  method="post">
    @foreach (var item in Model)
    {
        <label style="margin-left:1.2rem">Açıklama 1</label>
<textarea rows="1" class="form-control" name="Aciklama1">@item.Aciklama1</textarea>
        <label style="margin-left:1.2rem">Açıklama 2</label>
<textarea rows="5" class="form-control" name="Aciklama2">@item.Aciklama2</textarea>
    }
<br />
    <button class="btn btn-success" style="margin:1.2rem">Güncelle</button>
</form>